
<h1>Make a new note card</h1>

<%= form_with scope: :card, url: user_cards_path, local: true do | form | %>
<div>
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
</div>
<div>
    <%= form.label :text %>
    <br>
    <%= form.text_area :text %>
</div>
<div>
    <%= form.label :category %>
    <br>
    <%= form.text_field :category %>
</div>
<div>
    <%= form.label :urgency %>
    <br>
    <%= select_tag(:urgency, options_for_select([['Mild Fire', 1], ['Medium Fire', 2], ['Hot Fire', 3], ['Diablo', 4]], 1)) %>
    <input type = "hidden" value = "<%= @user_id %>" name="card[user_id]">
</div>
<div>
    <%= form.submit %>
</div>
<%end%>
<%= link_to 'My cards', new_user_card_path%>
<%= link_to 'View All Users', users_index_path%>
