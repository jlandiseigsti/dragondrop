<h1>Our Dragon Team </h1>
<div>
    <% @users.each do | user | %>
        <div class = user>
            <% name = user.name.upcase %>
            <% path = (user.id)%>
            <span class = "dragon_name"><%= link_to name, user_path(user.id) %></span> <br>
            <%= link_to 'Edit User', edit_user_path(user.id) %>
            <%= link_to 'Delete user', user_path(user.id), method: :delete, data: { confirm: "Are you sure?" }%>
        </div> <br>
    <% end %>
    <br>
    <%= link_to 'New User', users_new_path%>
</div>