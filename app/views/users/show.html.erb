<h1><%=@user.name%>'s cards</h1>

<br>
<div class = "container">
    <% @cards.each do |c| %>
    <div class="card">
        <p><strong> <%= c.title%></strong></p>
        <p><%= c.text%></p>
        <%= link_to 'Edit card', edit_user_card_path(@user.id, c.id)%>
        <%= link_to 'Delete card', user_card_path(@user.id, c.id), method: :delete, data: { confirm: "Are you sure?" }%>
    </div>
    <% end %>
    <br>
</div>
<%= link_to 'New card', new_user_card_path(@user.id) %>

<br>
<%= link_to 'View All Users', root_path%>